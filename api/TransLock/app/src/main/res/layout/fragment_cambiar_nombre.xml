<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.configuracion.cambiar.cambiarNombreFragment"
    android:background="@color/backgroundGris">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Nombre"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textColorHint="@color/textoSecundario"
        android:id="@+id/cambiar_nombre"
        android:gravity="center"
        android:background="@drawable/circular_button_white"
        android:inputType="text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/cambiar_nombre"
        android:background="@drawable/circular_button_white"
        android:hint="Apellido"
        android:textColorHint="@color/textoSecundario"
        android:id="@+id/cambiar_apellido"
        android:gravity="center"
        android:inputType="text"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient"
        android:text="Guardar"
        android:id="@+id/guardar_cambios_nombre"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>