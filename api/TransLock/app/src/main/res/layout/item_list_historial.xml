<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/altura_tarjetas"
        app:cardBackgroundColor="@color/backgroundTarjetas"
        android:layout_marginLeft="@dimen/margin_lateral"
        android:layout_marginRight="@dimen/margin_lateral"
        android:layout_marginTop="@dimen/margin_vertical"
        app:cardCornerRadius="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:autoSizeTextType="uniform"
                android:text="Nombre Candado"
                android:id="@+id/nombre_candado_historial"
                android:textColor="@color/textoBasico"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="70"
                android:orientation="horizontal"
                android:weightSum="100">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Evento: Apertura"
                        android:id="@+id/evento_historial"
                        android:textColor="@color/textoSecundario"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Por: Usuario"
                        android:id="@+id/activador_historial"
                        android:textColor="@color/textoSecundario"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Hora: 05:35 p.m."
                        android:id="@+id/hora_historial"
                        android:textColor="@color/textoSecundario"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Fecha: 10/05/2018"
                        android:id="@+id/fecha_historial"
                        android:textColor="@color/textoSecundario"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/candado"
                        android:layout_margin="10dp"
                        android:id="@+id/imagen_historial"
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="10dp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>